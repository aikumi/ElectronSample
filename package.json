{
  "name": "electronappsample",
  "version": "1.0.0",
  "description": "",
  "devDependencies": {
    "electron": "^8.3.1",
    "electron-builder": "^22.1.0"
  },
  "scripts": {
    "start": "electron ./src",
    "build-macOS": "electron-packager ./src FirstApp --platform=darwin --arch=x64 --overwrite",
    "build-windows": "electron-packager ./src FirstApp --platform=win32 --arch=x64 --overwrite",
    "clean": "find . -name node_modules | xargs rm -rf",
    "clean-install": "./scripts/clean-install.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.electron.yourapp",
    "directories": {
      "app": "src",
      "output": "./installer"
  },
    "files": [
      "**/*",
      "package.json",
      "src/package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
